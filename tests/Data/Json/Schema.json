{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "Schema.json",
	"properties": {
		"$schema": {
			"type": "string"
		},
		"Permissions": {
			"type": "array",
			"items": {
				"properties": {
					"id": {
						"type": [
							"integer",
							"string"
						],
						"description": "A unique identifier for this permission"
					},
					"name": {
						"type": "string"
					}
				},
				"additionalProperties": false,
				"required": [
					"id",
					"name"
				]
			}
		},
		"Roles": {
			"description": "Define the available roles",
			"type": "array",
			"items": {
				"properties": {
					"id": {
						"type": [
							"integer",
							"string"
						],
						"description": "A unique identifier for this role"
					},
					"name": {
						"type": "string"
					},
					"description": {
						"type": "string"
					},
					"permissions": {
						"type": "array",
						"items": {
							"type": [
								"integer",
								"string"
							]
						},
						"uniqueItems": true
					},
					"parent": {
						"type": [
							"integer",
							"string"
						],
						"description": "We establish a hierarchy of roles by specifying the parent of the role. All roles should have a parent except the \"root\" role."
					},
					"children": {
						"type": "array",
						"description": "We establish a hierarchy of roles by specifying the children of the role. All nodes should have children except for the leaves of the tree.",
						"items": {
							"type": [
								"integer",
								"string"
							]
						},
						"uniqueItems": true
					}
				},
				"additionalProperties": false,
				"required": [
					"id",
					"name"
				]
			}
		},
		"Subjects": {
			"type": "array",
			"items": {
				"properties": {
					"id": {
						"type": [
							"integer",
							"string"
						],
						"description": "A unique identifier for this subject"
					},
					"name": {
						"type": "string"
					},
					"role": {
						"type": [
							"integer",
							"string"
						],
						"description": "The Role id that applies to this subject"
					}
				},
				"additionalProperties": false,
				"required": [
					"id",
					"name",
					"role"
				]
			}
		}
	},
	"additionalProperties": false
}